<Window x:Class="TKMManager.Dialogs.AddSupplier"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj dostawcę" Height="143" Width="418">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Center">Nazwa dostawcy:</TextBlock>
        <TextBox Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" x:Name="txtSuppName">x</TextBox>
        <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center">Adres: </TextBlock>
        <TextBox Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" x:Name="txtSuppAddr">x</TextBox>        
        <Button Grid.Column="0" Grid.Row="3" x:Name="btnAddSupp" Click="btnAddSupp_Click">Dodaj</Button>
        <Button Grid.Column="1" Grid.Row="3" x:Name="btnCancelAddSupp" Click="btnCancelAddSupp_Click">Anuluj</Button>
    </Grid>
</Window>

